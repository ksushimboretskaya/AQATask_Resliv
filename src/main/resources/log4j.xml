        <Console name="Console">
            <PatternLayout>
                <Pattern>%d{dd MMM yyyy HH:mm:ss} %-5p [%t] - %-60m [%C{-3}.%M (%F:%L)]%n</Pattern>
            </PatternLayout>
        </Console>
        <File name="File" fileName="target/logs/appTest.log">
            <PatternLayout>
                <Pattern>%d{dd MMM yyyy HH:mm:ss} %-5p [%t] â€“ %-60m [%C{-3}.%M (%F:%L)]%n</Pattern>
            </PatternLayout>
        </File>
